# Global configuration
RESTART_POLICY=unless-stopped
TIMEZONE=Asia/Bangkok
HEALTHCHECK_INTERVAL=10s
HEALTHCHECK_TIMEOUT=5s
HEALTHCHECK_RETRIES=6

# Database configuration
POSTGRES_USER=listmonk
POSTGRES_PASSWORD=listmonk
POSTGRES_DB=listmonk
POSTGRES_IMAGE=postgres
POSTGRES_VERSION=14-alpine
POSTGRES_CONTAINER_NAME=listmonk_db
POSTGRES_PORT=5432

# Listmonk configuration
LISTMONK_IMAGE=listmonk/listmonk
LISTMONK_VERSION=latest
LISTMONK_CONTAINER_NAME=listmonk_app
LISTMONK_PORT=9000
LISTMONK_HOSTNAME=listmonk.example.com
LISTMONK_ADMIN_USER=admin
LISTMONK_ADMIN_PASSWORD=password

# Database connection parameters for Listmonk
LISTMONK_DB_HOST=postgres
LISTMONK_DB_PORT=5432
LISTMONK_DB_SSL_MODE=disable
LISTMONK_DB_MAX_OPEN=25
LISTMONK_DB_MAX_IDLE=25
LISTMONK_DB_MAX_LIFETIME=300s